@model List<StudentDevelopmentPortal.Models.AdminModels.Faculty>

<div class="container">
	<div class="row pt-4 pb-3">
		<div class="col-6">
			<h2 class="text-primary fw-bold">
				Faculty List
			</h2>
		</div>
		<div class="col-6 text-end">
			<a asp-controller="Faculty" asp-action="Create" class="btn btn-primary">
				<i class="bi bi-plus-circle"></i> Add New Faculty
			</a>
		</div>
	</div>

<table class="table table-bordered table-striped" id="myTable">
	<thead>
		<tr>
			<th>FacultyID</th>
			<th>Password</th>
			<th>FacultyName</th>
			<th>Email</th>
			<th>Contact</th>
			<th class="text-center">Action</th>
		</tr>
	</thead>
	<tbody>
			@foreach (var obj in Model)
			{
					<tr>
						<td>@obj.FacultyId</td>
						<td>@obj.Password</td>
						<td>@obj.FullName</td>
						<td>@obj.Email</td>
						<td>@obj.Contact</td>
						<td class="text-center col-3">
							<div class="w-75 btn-group" role="group">
									<a asp-controller="Faculty" asp-action="Edit" asp-route-FacultyId="@obj.FacultyId" class="btn btn-primary mx-2">
										<i class="bi bi-pencil-square"></i> Edit
								</a>
									<a asp-controller="Faculty" asp-action="Delete" asp-route-FacultyId="@obj.FacultyId" class="btn btn-danger">
											<i class="bi bi-trash"></i> Remove
								</a>
							</div>
						</td>
					</tr>
			}

	</tbody>
</table>


</div>