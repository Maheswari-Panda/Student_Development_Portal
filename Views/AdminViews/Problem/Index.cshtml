@model List<StudentDevelopmentPortal.Models.AdminModels.Problem>

<div class="container">
	<div class="row pt-4 pb-3">
		<div class="col-6">
			<h2 class="text-primary fw-bold">
				Problem List
			</h2>
		</div>
		<div class="col-6 text-end">
			<a asp-controller="Problem" asp-action="Create" class="btn btn-primary">
				<i class="bi bi-plus-circle"></i> Add New Problem
			</a>
		</div>
	</div>

<table class="table table-bordered table-striped" id="myTable">
	<thead>
		<tr>
			<th>ProblemId</th>
			<th>ProblemStmt</th>
			<th>CourseName</th>
			<th>FacultyName</th>
			<th>Level</th>
			<th class="text-center">Action</th>
		</tr>
	</thead>
	<tbody>
			@foreach (var obj in Model)
			{
					<tr>
						<td>@obj.ProblemId</td>
						<td>@obj.Statement</td>
						<td>@obj.CourseId</td>
						<td>@obj.FacultyId</td>
						<td>@obj.Level</td>
						<td class="text-center">
							<div class="btn-group" role="group">
									<a asp-controller="Problem" asp-action="Edit" asp-route-ProblemId="@obj.ProblemId" class="btn btn-primary mx-1">
										<i class="bi bi-pencil-square"></i> Edit
								</a>
									<a asp-controller="Problem" asp-action="Delete" asp-route-ProblemId="@obj.ProblemId" class="btn btn-danger">
											<i class="bi bi-trash"></i> Remove
								</a>
							</div>
						</td>
					</tr>
			}

	</tbody>
</table>


</div>