@model StudentDevelopmentPortal.Models.AdminModels.Course

<form method="post">
	<input asp-for="CourseId" hidden />
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary fw-bold">Remove Course</h2>
			</hr>
		</div>
		<div class="mb-3 p-1">
			<label asp-for="CourseId" class="p-0"></label>
			<input asp-for="CourseId" type="text" class="form-control" readonly/>
		</div>
		<div class="mb-3 p-1">
			<label asp-for="CourseName" class="p-0"></label>
			<input asp-for="CourseName" type="text" class="form-control" readonly/>
		</div>
		<div class="mb-3 p-1">
			<label asp-for="CourseDescription" class="p-0"></label>
			<textarea asp-for="CourseDescription" class="form-control" readonly></textarea>
		</div>

		<div class="mb-3 p-1">
			<label asp-for="MaterialLink" class="p-0"></label>
			<input asp-for="MaterialLink" type="text" class="form-control" readonly/>
		</div>
		<div class="mb-3 p-1">
			<label asp-for="IsPractical" class="p-0"></label>
			<select asp-for="IsPractical" class="form-control" disabled>
				<option value="Yes">Yes</option>
				<option value="No">No</option>
			</select>
		</div>
		<div class="mb-3 p-1">
			<label asp-for="TotalMarks" class="p-0"></label>
			<input asp-for="TotalMarks" type="text" class="form-control" readonly/>
		</div>

		<div class="mb-3 p-1">
			<label asp-for="Program" class="p-0"></label>
			<select asp-for="Program" class="form-control" disabled>
				<option value="">Please select</option>
				<option value="FS BE-I">FS BE-I</option>
				<option value="SS BE-I">SS BE-I</option>
				<option value="FS BE-II">FS BE-II</option>
				<option value="SS BE-II">SS BE-II</option>
				<option value="FS BE-III">FS BE-III</option>
				<option value="SS BE-III">SS BE-III</option>
				<option value="FS BE-IV">FS BE-IV</option>
				<option value="SS BE-IV">SS BE-IV</option>
			</select>
		</div>

		<div class="row">
			<div class="col-6 col-md-3">
				<button type="submit" class="btn btn-danger form-control">Remove</button>
			</div>
			<div class="col-6 col-md-3">
				<a asp-controller="Course" asp-action="Index" class="btn btn-secondary border form-control">Back to List</a>
			</div>
		</div>
	</div>
</form>
