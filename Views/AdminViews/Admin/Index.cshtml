@model List<StudentDevelopmentPortal.Models.AdminModels.Admin>

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary fw-bold">
                Admin List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Admin" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Add New Admin
            </a>
        </div>
    </div>

    <table class="table table-bordered table-striped" id="myTable">
        <thead>
            <tr>
                <th>AdminId</th>
                <th>AdminName</th>
                <th>Email</th>
                <th>Password</th>
                <th>DateTime</th>
                <th class="text-center">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                    <tr>
                        <td>@obj.AdminId</td>
                        <td>@obj.AdminName</td>
                        <td>@obj.AdminEmail</td>
                        <td>@obj.AdminPassword</td>
                        <td>@obj.DateTime</td>
                        <td class="text-center col-3">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Admin" asp-action="Edit" asp-route-adminId="@obj.AdminId" class="btn btn-primary mx-2">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-controller="Admin" asp-action="Delete" asp-route-adminId="@obj.AdminId" class="btn btn-danger">
                                    <i class="bi bi-trash"></i> Remove
                                </a>
                            </div>
                        </td>
                    </tr>
            }
        </tbody>
    </table>
</div>
