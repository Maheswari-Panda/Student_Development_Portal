@model StudentDevelopmentPortal.Models.AdminModels.Admin

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary fw-bold">Edit Admin</h2>
            <hr />
        </div>
        <div class="mb-3 p-1">
            <label asp-for="AdminId" class="p-0"></label>
            <input asp-for="AdminId" type="text" class="form-control" readonly/>
            <span asp-validation-for="AdminId" class="text-danger"></span>
        </div>
        <div class="mb-3 p-1">
            <label asp-for="AdminName" class="p-0"></label>
            <input asp-for="AdminName" type="text" class="form-control" />
            <span asp-validation-for="AdminName" class="text-danger"></span>
        </div>
        <div class="mb-3 p-1">
            <label asp-for="AdminEmail" class="p-0"></label>
            <input asp-for="AdminEmail" type="email" class="form-control" />
            <span asp-validation-for="AdminEmail" class="text-danger"></span>
        </div>
        <div class="mb-3 p-1">
            <label asp-for="AdminPassword" class="p-0"></label>
            <input asp-for="AdminPassword" type="password" class="form-control" />
            <span asp-validation-for="AdminPassword" class="text-danger"></span>
        </div>

        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Update</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Admin" asp-action="Index" class="btn btn-secondary border form-control">Back to List</a>
            </div>
        </div>
    </div>
</form>

@*for client site validation (validate without submit button) we need to use js script in create.cshtml *@
@section Scripts {
    @{
                        <partial name="_ValidationScriptsPartial"/>
    }
}
