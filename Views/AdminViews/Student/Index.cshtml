@model List<StudentDevelopmentPortal.Models.AdminModels.Student>

<div class="container">
	<div class="row pt-4 pb-3">
		<div class="col-6">
			<h2 class="text-primary fw-bold">
				Student List
			</h2>
		</div>
		<div class="col-6 text-end">
			<a asp-controller="Student" asp-action="Create" class="btn btn-primary">
				<i class="bi bi-plus-circle"></i> Add New Student
			</a>
		</div>
	</div>

<table class="table table-bordered table-striped" id="myTable">
	<thead>
		<tr>
			<th>Prn</th>
			<th>Password</th>
			<th>StudentName</th>
			<th>Email</th>
			<th>Contact</th>
			<th>Program</th>
			<th class="text-center">Action</th>
		</tr>
	</thead>
	<tbody>
			@foreach (var obj in Model)
			{
				<tr>
					<td>@obj.Prn</td>
					<td>@obj.Password</td>
					<td>@obj.FullName</td>
					<td>@obj.Email</td>
					<td>@obj.Contact</td>
					<td>@obj.Program</td>
					<td class="text-center col-3">
						<div class="w-75 btn-group" role="group">
								<a asp-controller="Student" asp-action="Edit" asp-route-Prn="@obj.Prn" class="btn btn-primary mx-2">
									<i class="bi bi-pencil-square"></i> Edit
							    </a>
								<a asp-controller="Student" asp-action="Delete" asp-route-Prn="@obj.Prn" class="btn btn-danger">
										<i class="bi bi-trash"></i> Remove
							</a>
						</div>
					</td>
				</tr>
			}

	</tbody>
</table>


</div>