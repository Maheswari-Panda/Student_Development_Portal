@model StudentDevelopmentPortal.Models.StudentModels.StudentAssignment
@{
    Layout = "~/Views/Shared/_FacultyLayout.cshtml";
    var FacultyId = ViewBag.FacultyId;
}

<div class="container">
	<div class="row pt-4 pb-1">
		<div class="col-6">
			<h4 class="text-primary fw-bold">
				@ViewBag.AssignmentObj.AssignmentName
			</h4>
		</div>
	</div>
	<div class="row pt-2 pb-3">
		<hr />
		<div class="col-12">
			<p class="text-light">
				@ViewBag.AssignmentObj.Description
			</p>
		</div>
	</div>
</div>

<style>
	/* Style the scrollbar */
	.container::-webkit-scrollbar {
		width: 3px; /* Set the width of the scrollbar */
		background-color: #343a40; /* Set background color of the scrollbar track */
	}

	/* Handle */
	.container::-webkit-scrollbar-thumb {
		background: #6c757d; /* Set color of the scrollbar handle */
		border-radius: 10px; /* Add some border radius to make it round */
	}
</style>


<div class="container" style="height: 570px; overflow-y: auto; overflow-x: hidden;">
	<div class="row pt-4 pb-1">
		<div class="col-12">
			<div style="height: 500px; overflow: auto;">
				<iframe src="@Model.SolutionUrl" style="width: 100%; height: 100%; border: none;"></iframe>
			</div>
		</div>
	</div>

	<form method="post">
	<div class="row pt-2 pb-3">
		<hr />
		<div class="col-12">
				<input asp-for="Prn" type="hidden" value="@Model.Prn"/>
				<input asp-for="AssignmentId" type="hidden" value="@Model.AssignmentId" />
				<input asp-for="SolutionUrl" type="hidden" value="@Model.SolutionUrl" />
				<textarea asp-for="Feedback" class="form-control"></textarea>
		</div>
	</div>
	<div class="row pt-2 pb-3">
		<div class="col-8">
			<div class="input-group">
				<span class="input-group-text bg-danger text-light">Marks</span>
				<input asp-for="AssignedMarks" type="text" class="form-control">
			</div>
		</div>
		<div class="col-4">
			<button type="submit" class="btn btn-primary">Return Assignment</button>
		</div>
	</div>
	</form>
</div>
