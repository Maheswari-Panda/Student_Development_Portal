@{
    Layout = "~/Views/Shared/_FacultyLayout.cshtml";
    var FacultyId = ViewBag.FacultyId;
}

@model StudentDevelopmentPortal.Models.AdminModels.Faculty

<h1 class="text-center mt-1"> <i class="bi bi-emoji-smile"></i> Welcome @Model.FullName</h1>

<div class="container mt-5">
    <div class="row">

<div class="col-md-4">
    <a asp-controller="FacultyPage" asp-action="Profile" asp-route-FacultyId="@FacultyId" class="card-link text-decoration-none" >
        <div class="card text-light bg-success mb-3" style="height: 10rem;">
            <div class="card-body d-flex justify-content-between align-items-center">
                <div>
                    <h5 class="card-title fw-bold mb-0 fs-5">My Profile</h5> 
                </div>
                <i class="bi bi-person-check fs-2 fs-xl-3"></i>
            </div>
        </div>
    </a>
</div>

<div class="col-md-4">
    <a asp-controller="FacultyStudent" asp-action="Index" asp-route-FacultyId="@FacultyId" class="card-link text-decoration-none">
        <div class="card text-white bg-warning mb-3" style="height: 10rem;">
            <div class="card-body d-flex justify-content-between align-items-center">
                <div>
                    <h5 class="card-title fw-bold mb-0 fs-5">Students</h5> <!-- Added fw-bold for bold text -->
                </div>
                <i class="bi bi-journal-code fs-2 fs-xl-3"></i> <!-- Multi-user icon -->
            </div>
        </div>
    </a>
</div>

<div class="col-md-4">
    <a asp-controller="FacultyCourse" asp-action="Index" asp-route-FacultyId="@FacultyId" class="card-link text-decoration-none">
        <div class="card text-white bg-danger mb-3" style="height: 10rem;">
            <div class="card-body d-flex justify-content-between align-items-center">
                <div>
                    <h5 class="card-title fw-bold mb-0 fs-5">Courses</h5> <!-- Added fw-bold for bold text -->
                </div>
                <i class="bi bi-journal-code fs-2 fs-xl-3"></i> <!-- Multi-user icon -->
            </div>
        </div>
    </a>
</div>

<div class="col-md-4">
    <a  asp-controller="FacultyProblem" asp-action="Index" asp-route-FacultyId="@FacultyId" class="card-link text-decoration-none">
        <div class="card text-white bg-primary mb-3" style="height: 10rem;">
            <div class="card-body d-flex justify-content-between align-items-center">
                <div>
                    <h5 class="card-title fw-bold mb-0 fs-5">Problems</h5> <!-- Added fw-bold for bold text -->
                </div>
                <i class="bi bi-code-square fs-2 fs-xl-3"></i> <!-- Multi-user icon -->
            </div>
        </div>
    </a>
</div>

<div class="col-md-4">
    <a asp-controller="FacultyAssignment" asp-action="Index" asp-route-FacultyId="@FacultyId" class="card-link text-decoration-none">
        <div class="card text-white bg-info mb-3" style="height: 10rem;">
            <div class="card-body d-flex justify-content-between align-items-center">
                <div>
                    <h5 class="card-title fw-bold mb-0 fs-5">Assignments</h5> <!-- Added fw-bold for bold text -->
                </div>
                <i class="bi bi-journal-bookmark fs-2 fs-xl-3"></i> <!-- Multi-user icon -->
            </div>
        </div>
    </a>
</div>

<div class="col-md-4">
    <a asp-controller="FacultyJobreadiness" asp-action="Index" asp-route-FacultyId="@FacultyId" class="card-link text-decoration-none">
        <div class="card text-white bg-secondary mb-3" style="height: 10rem;">
            <div class="card-body d-flex justify-content-between align-items-center">
                <div>
                    <h5 class="card-title fw-bold mb-0 fs-5">JobReadiness Contents</h5> <!-- Added fw-bold for bold text -->
                </div>
                <i class="bi bi-graph-up-arrow fs-2 fs-xl-3"></i> <!-- Multi-user icon -->
            </div>
        </div>
    </a>
</div>

<div class="col-md-4">
    <a asp-controller="FacultyEvent" asp-action="Index" asp-route-FacultyId="@FacultyId" class="card-link text-decoration-none">
        <div class="card text-light bg-muted mb-3" style="height: 10rem;">
            <div class="card-body d-flex justify-content-between align-items-center">
                <div>
                    <h5 class="card-title fw-bold mb-0 fs-5">Events</h5> <!-- Added fw-bold for bold text -->
                </div>
                <i class="bi bi-calendar2-event fs-2 fs-xl-3"></i> <!-- Multi-user icon -->
            </div>
        </div>
    </a>
</div>

    </div>
</div>
